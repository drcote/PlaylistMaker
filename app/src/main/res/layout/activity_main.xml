<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding"
    android:paddingTop="14dp"
    android:paddingRight="@dimen/padding"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="40dp"
        android:gravity="start"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/find_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/padding"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/find"
        android:textAllCaps="false"
        android:textColor="@color/main_screen_text"
        android:textSize="@dimen/text_size_primary"
        app:cornerRadius="@dimen/main_menu_button_radius"
        app:icon="@drawable/find"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_menu_padding_pic_text"
        app:iconTint="@color/main_screen_text" />

    <Button
        android:id="@+id/media_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/padding"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/main_screen_text"
        android:textSize="@dimen/text_size_primary"
        app:cornerRadius="@dimen/main_menu_button_radius"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_menu_padding_pic_text"
        app:iconTint="@color/main_screen_text" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/main_screen_text"
        android:textSize="@dimen/text_size_primary"
        app:cornerRadius="@dimen/main_menu_button_radius"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_menu_padding_pic_text"
        app:iconTint="@color/main_screen_text" />
</LinearLayout>