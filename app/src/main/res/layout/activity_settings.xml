<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_screen_background"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_vertical_settings">

        <Button
            android:id="@+id/back_button"
            style="@style/BackFromSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:elevation="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:stateListAnimator="@null"
            app:icon="@drawable/ic_back_arrow_24"
            app:iconPadding="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/ys_display_medium"
            android:paddingLeft="24dp"
            android:text="@string/settings"
            android:textColor="@color/settings_screen_title"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_vertical_settings"
        android:paddingBottom="@dimen/padding_vertical_settings">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:textColor="@color/switch_theme_title"
            android:textSize="@dimen/text_size_subtitle" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/share"
        style="@style/SettingsTextView"
        android:text="@string/share"
        app:drawableEndCompat="@drawable/share" />


    <TextView
        android:id="@+id/support"
        style="@style/SettingsTextView"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/support" />

    <TextView
        android:id="@+id/user_agreement"
        style="@style/SettingsTextView"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_8_14" />
</LinearLayout>