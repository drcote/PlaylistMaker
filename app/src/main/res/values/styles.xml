<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreen">
        <item name="android:background">@color/main_screen_background</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_screen_text</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/main_menu_button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_menu_padding_pic_text</item>
        <item name="iconTint">@color/main_screen_text</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_vertical_settings</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_settings</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="BackFromSettings">
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TrackInfo">
        <item name="android:textColor">@color/item_track_sub_label</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>